{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "test:e2e": { "dependsOn": ["test"], "outputs": [] },
    "test:all": { "dependsOn": ["test:e2e"] }
  }
}