{
  "extends": "./base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "__tests__"
  ]
}