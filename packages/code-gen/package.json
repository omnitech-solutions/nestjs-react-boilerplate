{
  "name": "@nestjs-react-boilerplate/code-gen",
  "private": true,
  "bin": {
    "nrp": "dist/cli.js"
  },
  "scripts": {
    "pretest": "pnpm build",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && cpy src/templates/ dist/templates --parents",
    "gen:entity": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=src/templates/nest/entity/entity.plopfile.ts",
    "schema:entitygen": "typebox extract json --module entity-gen.schema.ts -e T --out entity-gen.schema.json",
    "clean": "rimraf dist",
    "test": "NODE_OPTIONS='--import tsx' vitest run",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@nestjs-react-boilerplate/config": "workspace:^",
    "@sinclair/typebox": "^0.34.39",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "dot-object": "^2.1.5",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "node-plop": "^0.32.0",
    "xstate": "^5.20.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@gmrchk/cli-testing-library": "^0.1.2",
    "@testing-library/dom": "^10.4.1",
    "@types/dot-object": "^2.1.6",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.12.12",
    "cli-testing-library": "^3.0.1",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.0.0",
    "get-tsconfig": "^4.10.1",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.4",
    "typebox-cli": "^1.0.5",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}