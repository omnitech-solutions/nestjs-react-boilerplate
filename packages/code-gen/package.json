{
  "name": "@nestjs-react-boilerplate/code-gen",
  "private": true,
  "bin": {
    "nrp": "dist/cli.js"
  },
  "scripts": {
    "pretest": "pnpm build",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && cpy src/templates/ dist/templates --parents",
    "gen:entity": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=src/templates/nest/entity/entity.plopfile.ts",
    "clean": "rimraf dist",
    "test": "NODE_OPTIONS='--import tsx' vitest run",
    "start": "node dist/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@nestjs-react-boilerplate/config": "workspace:^",
    "@types/lodash-es": "^4.17.12",
    "ajv": "^8.17.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "node-plop": "^0.32.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.12.12",
    "cli-testing-library": "^3.0.1",
    "cross-env": "^10.0.0",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}