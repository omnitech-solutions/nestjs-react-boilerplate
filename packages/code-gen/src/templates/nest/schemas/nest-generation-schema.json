{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Entity Generation Schema",
  "description": "Schema for validating input to the entity code generator.",
  "type": "object",
  "properties": {
    "entityName": {
      "type": "string",
      "minLength": 1,
      "description": "The name of the entity class (e.g., 'Organization')."
    },
    "tableName": {
      "type": "string",
      "minLength": 1,
      "description": "The name of the database table (e.g., 'organizations')."
    },
    "primaryKey": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "options": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["uuid", "increment"]
            }
          },
          "required": ["strategy"]
        }
      },
      "required": ["name", "type", "options"]
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "nullable": { "type": "boolean", "default": false },
            "length": { "type": "number" }
          },
          "required": ["type"]
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "required": ["entityName", "tableName", "primaryKey", "properties"]
}